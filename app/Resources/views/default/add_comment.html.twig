{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-10 col-md-offset-1">
        <div class="box box-solid box-default">
            <div class="box-header with-border"
                <h5 class="box-title"><i class="fa fa-lightbulb-o fa-fw"></i>{{ article.name }}</h5>
                <small class="pull-right"><i class="fa fa-calendar fa-fw"></i>{{ article.publishedAt|date('d-m-Y') }} | <i class="fa fa-clock-o fa-fw"></i>{{ article.publishedAt|date('H:i') }}</small>
            </div>
            <div class="box-body">
                {{ article.description }}
            </div>
        </div>
    </div>

    <div class="col-md-8 col-md-offset-2">
        <div class="box box-info col-md-3">
            <div class="box-header with-border">
                <h3 class="box-title">Ajouter un commentaire</h3>
            </div>

            <form  method="post" action="{{ path('createComment', {'articleId': article.id}) }}" class="form">
                <div class="form-group">
                    <label for="title" class="control-label">Titre</label>
                    <input class="form-control" type="text" id="title" name="title" required="required"/>
                </div>

                <div class="form-group">
                    <label for="description" class="control-label">Votre Commentaire</label>
                    <textarea id="description" name="description" required="required" class="form-control" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" id="submit" name="submit" value="Ajouter" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

{% endblock %}


